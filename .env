# ANBD System Environment Variables
# Copy this to .env in your project root

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=anbd-dev-key-change-in-production-2024
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///anbd.db
SQLALCHEMY_DATABASE_URI=sqlite:///anbd.db

# WebSocket Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=5000

# ML Model Configuration
ANOMALY_THRESHOLD=0.5
BATCH_SIZE=32

# Data Generation Configuration
DATA_GENERATION_INTERVAL=120
MAX_CSV_FILES=100

# Logging Configuration
LOG_LEVEL=INFO

# Processing Configuration
MAX_CONCURRENT_PROCESSES=4
PROCESS_TIMEOUT=300
QUEUE_MAX_SIZE=1000

# Security Configuration (for production)
# RATE_LIMIT_PER_MINUTE=60
# SESSION_TIMEOUT_HOURS=24

# Performance Configuration
# CACHE_SIZE=1000
# MEMORY_LIMIT_MB=512

# Development Settings
# Set to False in production
DISABLE_SSL_VERIFY=True
ENABLE_DEBUG_ROUTES=True

